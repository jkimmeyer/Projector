<%=form_for(@project) do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Responsible Person" %>
  <%= f.text_field :person_responsible %>

  <%= f.label "Start Date" %>
  <%= f.datetime_field :project_start_date, 'data-provide':'datepicker', 'data-date-format':'dd-mm-yyyy' %>

  <%= f.label "Planned Termination Date" %>
  <%= f.datetime_field :planned_termination_date, 'data-provide':'datepicker', 'data-date-format':'dd-mm-yyyy' %>

  <%= f.label "Description" %>
  <%= f.text_area :description %>

  <%= f.submit yield(:title), class: "btn btn-primary" %>
    <% end %>
