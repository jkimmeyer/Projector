<% provide(:title, @project.name)%>
<h1><%= yield(:title) %></h1>
<div class='row'>
  <div class = 'col-md-6'>
    <h2>Projectinformations</h2>

    <dl class="dl-horizontal">
      <dt>Responsible Person:</dt> <dd><%=@project.person_responsible%></dd>
      <dt>Start Date:</dt> <dd><%=l(@project.project_start_date) %></dd>
      <dt>Planned Termination Date:</dt> <dd><%=l(@project.planned_termination_date) %></dd>
      <dt>Projectprogress:</dt> <dd> <%= number_to_percentage(@project.progress, precision: 2)%></dd>
      <dt>Description:</dt> <dd> <%= @project.description %></dd>
    </dl>

    <div class = 'col-md-6'>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_project_path(@project), class:"btn btn-default" %>
        <%= link_to "Delete", @project, method: :delete,
              data: {confirm:"You sure?"},
              class:"btn btn-default" %>
      <% end %>
    </div>
  </div>

  <div class= 'col-md-6'>
    <h2>Milestones</h2>
    <%= render template: "/milestones/index.html.erb"%>
  </div>
</div>
