<% provide(:title, @project.name)%>
<h1><%= yield(:title) %></h1>
<div class='row'>
  <div class = 'col-md-6'>
    <h2>Projektinformationen</h2>

    <dl class="dl-horizontal">
      <dt>Verantwortlicher:</dt> <dd><%=@project.person_responsible%></dd>
      <dt>Start-Datum:</dt> <dd><%=l(@project.project_start_date) %></dd>
      <dt>Geplantes End-Datum:</dt> <dd><%=l(@project.planned_termination_date) %></dd>
      <dt>Projektfortschritt:</dt> <dd> <%= number_to_percentage(@project.progress, precision: 2)%></dd>
    </dl>

    <div class = 'col-md-6 centered'>
      <% if user_signed_in? %>  
        <%= link_to "Bearbeiten", edit_project_path(@project), class:"btn btn-default" %>
        <%= link_to "LÃ¶schen", @project, method: :delete,
              data: {confirm:"You sure?"},
              class:"btn btn-default" %>
      <% end %>
    </div>
  </div>

  <div class= 'col-md-6'>
    <h2>Meilensteine</h2>
    <%= render template: "/milestones/index.html.erb"%>
  </div>
</div>
