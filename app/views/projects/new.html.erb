<% provide(:title, 'New project')%>
<div class='row'>
  <div class="col-md-6">
    <%=form_for(@project) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :person_responsible %>
      <%= f.text_field :person_responsible %>

      <%= f.label :start %>
      <%= f.datetime_field :start, 'data-provide':'datepicker' %>

      <%= f.label :planned_termination_date %>
      <%= f.datetime_field :planned_termination_date, 'data-provide':'datepicker'%>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create project", class: "btn btn-primary" %>
    <% end %>
  <div>
</div>
