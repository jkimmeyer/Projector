<% provide(:title, 'New milestone')%>
<div class='row'>
  <div class="col-md-6">
    <%=form_for([@milestone, url: edit_project_milestone_path(params[:id])]) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :person_responsible %>
      <%= f.text_field :person_responsible %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :completed %>
      <%= f.radio_button :completed, 'Completed'%> Completed
      <%= f.radio_button :completed, 'Not Completed' %> Not Completed

      <%= f.submit "Create project", class: "btn btn-primary" %>
    <% end %>
  <div>
</div>
