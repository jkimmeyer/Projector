<%=form_for(special_path) do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Verantwortlicher" %>
  <%= f.text_field :person_responsible %>

  <%= f.label "Beschreibung" %>
  <%= f.text_area :description %>

  <%= f.label "Fortschritt" %>
  <%= f.radio_button :completed, true%> Abgeschlossen
  <%= f.radio_button :completed, false %> Nicht abgeschlossen

  <%= f.submit yield(:title), class: "btn btn-primary" %>
<% end %>
